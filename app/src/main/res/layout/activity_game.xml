<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".InfoActivity"
    tools:ignore="MissingDefaultResource"
    android:background="?attr/backgroundImage">

    <Button
        android:id="@+id/buttonReturnToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/button_return_menu"
        android:textSize="20sp"
        style="@style/ButtonStyle"/>

    <TextView
        android:id="@+id/gameCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="@string/text_current_time" />

    <GridLayout
        android:id="@+id/mainGridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/rounded_corners">
    </GridLayout>


</LinearLayout>